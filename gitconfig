[user]
 name = Zack Youngren
 email = zyoungren@constantcontact.com
[push]
 default = current
[color]
 ui = auto
[alias]
 aa = add --all
 ap = add --patch
 ca = commit --amend
 ci = commit -v
 co = checkout
 up = !git fetch upstream && git rebase upstream/local
 create-branch = !sh -c 'git push origin HEAD:refs/heads/$1 && git fetch origin && git branch --track $1 origin/$1 && cd . && git checkout $1' -
 delete-branch = !sh -c 'git push origin :refs/heads/$1 && git remote prune origin && git branch -D $1' -
 merge-branch = !git checkout master && git merge @{-1}
 pr = !hub pull-request
 rebase-origin = !git fetch origin && git rebase origin/master
 st = status
 lo = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
 log-s = log --oneline --no-merges
[core]
 excludesfile = ~/.gitignore
 autocrlf = input
 editor = vim
[diff]
 tool = diffmerge
[difftool "diffmerge"]
 cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[mergetool "diffmerge"]
 cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
 trustExitCode = true
