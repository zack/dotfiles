[user]
  name = Zack Youngren
  email = zack@youngren.io
[push]
  default = current
[color]
  ui = auto
[alias]
  aa = add --all
  ap = add --patch
  ca = commit --amend
  ci = commit -v
  co = checkout
  up = !git checkout development && git fetch upstream && git reset --hard upstream/development
  rb = !git fetch upstream && git rebase upstream/development
  create-branch = !sh -c 'git push origin HEAD:refs/heads/$1 && git fetch origin && git branch --track $1 origin/$1 && cd . && git checkout $1' -
  delete-branch = !sh -c 'git push origin :refs/heads/$1 && git remote prune origin && git branch -D $1' -
  merge-branch = !git checkout master && git merge @{-1}
  pr = !hub pull-request
  boba-fetch = fetch
  rebase-origin = !git fetch origin && git rebase origin/master
  st = status
  lo = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  log-s = log --oneline --no-merges
  files = diff-tree --no-commit-id --name-only -r
  log-f = log --stat
  cpr = !git fetch upstream && sh -c 'git checkout -b pr-$1 refs/pull/upstream/$1' -
  dpr = !git checkout development && git branch -D `git branch | grep -e '^  pr-\\d\\{4\\}$'`
[core]
  excludesfile = ~/.gitignore_global
  autocrlf = input
  editor = vim
[diff]
  tool = diffmerge
[difftool "diffmerge"]
  cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[mergetool "diffmerge"]
  cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
  trustExitCode = true
