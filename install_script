# This script creates symlinks from the home directory
# to any desired dotfiles in ~/dotfiles
############################

########## Variables

dir=~/dotfiles                    # dotfiles directory
olddir=~/dotfiles_old             # old dotfiles backup directory
workdir=~/dotfiles/work_dotfiles

# list of files/folders to symlink in homedir
files="ackrc antigen agignore tmux vimrc vim zshrc tmux.conf syntastic.conf gitconfig gitignore_global"
workfiles="zshrc_work"

##########

# create dotfiles_old in homedir
echo "Creating $olddir for backup of any existing dotfiles in ~"
mkdir -p $olddir
echo "...done"

# change to the dotfiles directory
echo "Changing to the $dir directory"
cd $dir
echo "...done"

# move any existing dotfiles in homedir to dotfiles_old directory, then create symlinks
for file in $files; do
echo "Creating symlink to $file in home directory."
ln -s $dir/$file ~/.$file
done
echo "...done"

# Do the same for the work dotfiles
for file in $workfiles; do
echo "Creating symlink to $file in home directory."
ln -s $workdir/$file ~/.$file
done
echo "...done"
